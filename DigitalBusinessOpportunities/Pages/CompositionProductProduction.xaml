<Page x:Class="DigitalBusinessOpportunities.Pages.CompositionProductProduction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalBusinessOpportunities.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompositionProductProduction">

    <Grid Margin="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGComposition"
                  IsReadOnly="True"
AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номенклатура" Binding="{Binding Nomenclatures.Name}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Count}"/>
                <DataGridTextColumn Header="Ед.изм" Binding="{Binding Unit}"/>
                <DataGridTextColumn Header="Спецификация" Binding="{Binding Specifications}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Back"
               x:Name="BTBack"
               Width="100"
               Height="20"
               Grid.Row="1"
               HorizontalAlignment="Left"
               Click="BTBack_Click"/>
    </Grid>
</Page>
