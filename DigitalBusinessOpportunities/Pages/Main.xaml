<Page x:Class="DigitalBusinessOpportunities.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalBusinessOpportunities.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Производственное предприятие"
                   FontSize="24"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="10"/>

        <Viewbox Grid.Row="1"
                 Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TabControl Width="1300"
                        Height="700">

                    <TabItem x:Name="TIPurchase"
                         Header="Закупки">
                        <TabControl Width="1300"
                        Height="700">


                            <TabItem Header="Закупка материалов"
                                 x:Name="TIPurchaseMaterial">


                                <ScrollViewer>
                                    <DataGrid x:Name="DGPurchase"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGPurchase_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номенклатура" Binding="{Binding Nomenclatures.Name}"/>
                                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                                            <DataGridTextColumn Header="Количество" Binding="{Binding Count}"/>
                                            <DataGridTextColumn Header="Сумма" Binding="{Binding GetSum}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                                





                            </TabItem>


                            <TabItem Header="Заказы">
                                <ScrollViewer>
                                    <DataGrid x:Name="DGOrder"
IsReadOnly="True"
AutoGenerateColumns="False"
                        MouseDoubleClick="DGOrder_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номер" Binding="{Binding Id}"/>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                                
                            </TabItem>
                        </TabControl>
                    </TabItem>


                    <TabItem x:Name="TISale"
         Header="Продажи">
                        <TabControl Width="1300"
                        Height="700">
                            <TabItem Header="Продажа товаров"
                                     x:Name="TISalesNomenclature">

                                <ScrollViewer>
                                    <DataGrid x:Name="DGCompositionSales"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGCompositionSales_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номенклатура" Binding="{Binding Nomenclatures.Name}"/>
                                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                                            <DataGridTextColumn Header="Количество" Binding="{Binding Count}"/>
                                            <DataGridTextColumn Header="Сумма" Binding="{Binding GetSum}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                                    
                                    


                            </TabItem>
                            
                            
                            <TabItem Header="Все продажи">
                                <ScrollViewer>
                                    <DataGrid x:Name="DGSales"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGSales_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номер" Binding="{Binding Id}"/>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                                
                            </TabItem>
                            
                            
                        </TabControl>
                    </TabItem>
                    <TabItem x:Name="TIProduction"
Header="Производство">
                        <TabControl Width="1300"
                        Height="700">
                            <TabItem Header="Товары для производства"
                                     x:Name="TIProductsProduction">
                                <ScrollViewer>
                                    <DataGrid x:Name="DGProducts"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGProducts_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номенклатура" Binding="{Binding Nomenclatures.Name}"/>
                                            <DataGridTextColumn Header="Количество" Binding="{Binding Count}"/>
                                            <DataGridTextColumn Header="Ед.изм" Binding="{Binding Unit}"/>
                                            <DataGridTextColumn Header="Спецификация" Binding="{Binding Specifications}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Заказы на производство"
                                     x:Name="TIOrderProduction">
                                <ScrollViewer>
                                    <DataGrid x:Name="DGOrderProduction"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGOrderProduction_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номер" Binding="{Binding Id}"/>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </TabItem>

                            
                            <TabItem Header="Этапы производства"
                                     x:Name="TIStageProduction">
                                <ScrollViewer>
                                    <DataGrid x:Name="DGStageProduction"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGStageProduction_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номер заказа" Binding="{Binding OrderId}"/>
                                            <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderProductions.Date}"/>
                                            <DataGridTextColumn Header="Товар" Binding="{Binding CompositionProductions.Nomenclatures}"/>
                                            <DataGridTextColumn Header="Количество" Binding="{Binding CompositionProductions.Count}"/>
                                            <DataGridTextColumn Header="Ед.изм" Binding="{Binding CompositionProductions.Unit}"/>
                                            <DataGridTextColumn Header="Номер этапа" Binding="{Binding StageNumber}"/>
                                            <DataGridTextColumn Header="Название этапа" Binding="{Binding StageName}"/>
                                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </TabItem>


                            <TabItem Header="Материалы для производства"
                                     x:Name="TIMaterialProduction">
                                <ScrollViewer>
                                    <DataGrid x:Name="DGMaterialProduction"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGMaterialProduction_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номер" Binding="{Binding Id}"/>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </TabItem>


                            <TabItem Header="Трудозатраты производства"
                                     x:Name="TILaborProduction">
                                <ScrollViewer>
                                    <DataGrid x:Name="DGLaborProduction"
IsReadOnly="True"
AutoGenerateColumns="False"
                                MouseDoubleClick="DGLaborProduction_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Номер" Binding="{Binding Id}"/>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </TabItem>
                            
                            
                        </TabControl>
                    </TabItem>
                    <TabItem x:Name="TIOther"
Header="Прочее">
                        <TabControl Width="1300"
                        Height="700">
                            <TabItem Header="das">

                            </TabItem>
                            <TabItem Header="das">

                            </TabItem>
                        </TabControl>
                    </TabItem>
                </TabControl>

                <StackPanel Orientation="Horizontal"
                                     Grid.Row="1">
                    <Button x:Name="BTAdd"
                                    Content="Добавить"
                                    Click="BTAdd_Click"/>
                    <Button x:Name="BTRemove"
                                    Content="Удалить"
                                    Click="BTRemove_Click"/>

                    <Button
x:Name="BTBuy"
Content="Заказать"


Click="BTBuy_Click"/>
                </StackPanel>
            </Grid>
            
        </Viewbox>
    </Grid>
</Page>
