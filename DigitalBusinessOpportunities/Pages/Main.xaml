<Page x:Class="DigitalBusinessOpportunities.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalBusinessOpportunities.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Производственное предприятие"
                   FontSize="24"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="10"/>

        <Viewbox Grid.Row="1"
                 Margin="10">
            <TabControl Width="1300"
                        Height="700">
                <TabItem x:Name="TIPurchase"
                         Header="Закупки">
                    <TabControl Width="1300"
                        Height="650">
                        <TabItem Header="Закупка материалов">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="DGPurchase"
          IsReadOnly="True"
          AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Номенклатура" Binding="{Binding Nomenclatures.Name}"/>
                                        <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                                        <DataGridTextColumn Header="Количество" Binding="{Binding Count}"/>
                                        <DataGridTextColumn Header="Сумма" Binding="{Binding GetSum}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Orientation="Horizontal"
                                             Grid.Row="1">
                                    <Button x:Name="BTAdd"
                                            Content="Добавить"
                                            Click="BTAdd_Click"/>
                                    <Button x:Name="BTRemove"
                                            Content="Удалить"
                                            Click="BTRemove_Click"/>

                                    <Button
        x:Name="BTBuy"
        Content="Заказать"
        
        
        Click="BTBuy_Click"/>    
                                </StackPanel>
                                

                            </Grid>
                            
                        </TabItem>
                        <TabItem Header="Заказы">
                            <DataGrid x:Name="DGOrder"
              IsReadOnly="True"
              AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Номенклатура"/>
                                    <DataGridTextColumn Header="Цена"/>
                                    <DataGridTextColumn Header="Количество"/>
                                    <DataGridTextColumn Header="Сумма"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem x:Name="TISale"
         Header="Продажи">
                    <TabControl Width="1300"
                        Height="700">
                        <TabItem Header="das">

                        </TabItem>
                        <TabItem Header="das">

                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem x:Name="TIProduction"
Header="Производство">
                    <TabControl Width="1300"
                        Height="700">
                        <TabItem Header="das">

                        </TabItem>
                        <TabItem Header="das">

                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem x:Name="TIOther"
Header="Прочее">
                    <TabControl Width="1300"
                        Height="700">
                        <TabItem Header="das">

                        </TabItem>
                        <TabItem Header="das">

                        </TabItem>
                    </TabControl>
                </TabItem>
            </TabControl>
        </Viewbox>
    </Grid>
</Page>
