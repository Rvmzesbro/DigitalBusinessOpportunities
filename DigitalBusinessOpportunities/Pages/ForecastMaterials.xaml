<Page x:Class="DigitalBusinessOpportunities.Pages.ForecastMaterials"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalBusinessOpportunities.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ForecastMaterials">

    <Viewbox>
        <Grid Margin="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer>
                <DataGrid x:Name="DGMaterial"
          AutoGenerateColumns="False"
          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номенклатура" Binding="{Binding nomenclature}"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding count}"/>
                        <DataGridTextColumn Header="Процент уверенности" Binding="{Binding percent, StringFormat={}{0}%}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
            <Button x:Name="BTBack"
                    Grid.Row="1"
                    Click="BTBack_Click"
                    Content="Back"/>
        </Grid>
    </Viewbox>
    
</Page>
